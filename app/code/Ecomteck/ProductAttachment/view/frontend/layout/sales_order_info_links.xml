<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="sales.order.info.links">
                <block class="Magento\Sales\Block\Order\Link" name="ecomteck.productattachment.attachment.items" after="sales.order.info.links.information">
                    <arguments>
                        <argument name="path" xsi:type="string">productattachment/order/attachment</argument>
                        <argument name="label" xsi:type="string" translate="true">Product Attachments</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
